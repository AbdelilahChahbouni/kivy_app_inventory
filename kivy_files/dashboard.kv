<DashboardScreen>:
    name: "dashboard"

    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.95, 0.96, 0.98, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: "vertical"
            size_hint: 0.85, 0.7
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            spacing: 25
            padding: 25
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [25]

            Image:
                source: "assets/logo.png"
                size_hint_y: None
                height: 100
                allow_stretch: True
                keep_ratio: True

            Label:
                text: "Maintenance System"
                font_size: 28
                bold: True
                color: 0.2, 0.2, 0.3, 1

            Button:
                text: "Perform Transaction (Scan)"
                font_size: 20
                size_hint_y: None
                height: 55
                background_normal: ""
                background_color: (0.2, 0.6, 0.9, 1)
                color: 1, 1, 1, 1
                radius: [25]
                on_press: root.go_to_transaction_choice()

            Button:
                text: "Logout"
                font_size: 20
                size_hint_y: None
                height: 55
                background_normal: ""
                background_color: (0.9, 0.3, 0.3, 1)
                color: 1, 1, 1, 1
                radius: [25]
                on_press: root.logout()
