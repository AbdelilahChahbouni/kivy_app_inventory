#:import dp kivy.metrics.dp
#:import sp kivy.metrics.sp
#:import Window kivy.core.window.Window

<ConfirmScreen>:
    name: "confirm"

    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.95, 0.96, 0.98, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: "vertical"
            size_hint: 0.9, None
            height: self.minimum_height
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            spacing: dp(20)
            padding: dp(25)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [dp(25)]

            Label:
                text: "Confirm Transaction"
                font_size: sp(26)
                bold: True
                color: 0.2, 0.2, 0.3, 1
                size_hint_y: None
                height: dp(40)

            TextInput:
                id: part_id_input
                hint_text: "Part ID"
                font_size: sp(18)
                size_hint_y: None
                height: dp(55)
                background_normal: ""
                background_color: (0.95, 0.95, 0.95, 1)
                padding: [dp(15), dp(15)]

            TextInput:
                id: quantity_input
                hint_text: "Quantity"
                font_size: sp(18)
                size_hint_y: None
                height: dp(55)
                background_normal: ""
                background_color: (0.95, 0.95, 0.95, 1)
                padding: [dp(15), dp(15)]

            BoxLayout:
                id: machine_box
                orientation: "vertical"
                size_hint_y: None
                height: dp(55)

                Spinner:
                    id: machine_spinner
                    text: "Select Machine"
                    font_size: sp(18)
                    size_hint_y: None
                    height: dp(55)
                    background_normal: ""
                    background_color: (0.95, 0.95, 0.95, 1)
                    color: 0, 0, 0, 1

            Button:
                text: "Submit"
                size_hint_y: None
                height: dp(60)
                font_size: sp(20)
                background_normal: ""
                background_color: (0.2, 0.6, 0.9, 1)
                color: 1, 1, 1, 1
                bold: True
                on_press: root.submit()
                canvas.before:
                    Color:
                        rgba: 0.2, 0.6, 0.9, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(30)]
