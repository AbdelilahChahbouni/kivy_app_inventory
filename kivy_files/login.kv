<LoginScreen>:
    name: "login"

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"

        # Card container
        BoxLayout:
            orientation: "vertical"
            size_hint: 0.9, None
            height: dp(450)
            spacing: dp(10)
            padding: dp(20)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [dp(25)]

            # Inner AnchorLayout to center content inside card
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"

                BoxLayout:
                    orientation: "vertical"
                    size_hint: None, None
                    size: self.minimum_size
                    spacing: dp(12)
                    padding: dp(10)

                    Image:
                        source: "assets/logo.png"
                        size_hint: None, None
                        size: dp(100), dp(100)
                        allow_stretch: True
                        keep_ratio: True

                    Label:
                        text: "Welcome Back"
                        font_size: '22sp'
                        bold: True
                        color: 0.2, 0.2, 0.3, 1
                        size_hint_y: None
                        height: self.texture_size[1]

                    TextInput:
                        id: email
                        hint_text: "Email"
                        multiline: False
                        size_hint: None, None
                        size: dp(250), dp(50)
                        background_normal: ""
                        background_color: (0.95, 0.95, 0.95, 1)
                        padding: [dp(15), dp(15)]
                        on_text: root.email = self.text

                    TextInput:
                        id: password
                        hint_text: "Password"
                        password: True
                        multiline: False
                        size_hint: None, None
                        size: dp(250), dp(50)
                        background_normal: ""
                        background_color: (0.95, 0.95, 0.95, 1)
                        padding: [dp(15), dp(15)]
                        on_text: root.password = self.text

                    Label:
                        id: login_msg
                        text: ""
                        color: 1, 0, 0, 1
                        size_hint_y: None
                        height: self.texture_size[1]

                    Button:
                        text: "Login"
                        size_hint: None, None
                        size: dp(250), dp(50)
                        font_size: '18sp'
                        background_normal: ""
                        background_color: (0.2, 0.6, 0.9, 1)
                        color: 1, 1, 1, 1
                        bold: True
                        on_press: root.do_login()
                        canvas.before:
                            Color:
                                rgba: (0.2, 0.6, 0.9, 1)
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [dp(25)]
